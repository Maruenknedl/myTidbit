#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/keys.h>

&encoder_1_top_row {
	status = "okay";
};

#define PROC 0
#define AFFINITY 1
#define AFFIN 2
#define RHINO 3
#define RHIN 4
#define SWITCH 5

#define NONE 0

/ {	    
	sensors {
		compatible = "zmk,keymap-sensors";
		sensors = <&encoder_1_top_row>;
	};

	keymap {
		compatible = "zmk,keymap";

		proc_layer {
			bindings = <
						&kp LS(LG(Z)) 	&kp E 		&kp LALT
				&none	 	&kp LG(Z)  	&kp B 		&kp X
				&none 		&kp L 		&kp SPACE	&kp C
				&none 		&kp LG(BSPC) 	&kp S		&kp LG(U)
				&none          	&lt SWITCH ESC	&kp V     	&kp LCMD
			>;

			sensor-bindings = <&inc_dec_kp RBKT LBKT>;
		};
		
		affinity_layer {
			bindings = <
						&kp LS(LG(Z))  	&kp E 		&kp I
				&none	 	&kp LG(Z) 	&kp B 		&kp LG(SEMICOLON)
				&none 		&none 		&kp P		&kp LG(APOSTROPHE)
				&none 		&kp T		&kp A		&none
				&none          	&lt SWITCH ESC	&kp V    	&mo AFFIN
			>;

			sensor-bindings = <&inc_dec_kp RBKT LBKT>;
		};
		affin_layer {
			bindings = <
						&none	  	&none	 	&kp LC(J)
				&none	 	&none	 	&none		&kp LC(V)
				&none 		&none 		&none		&kp LC(C)
				&none 		&none		&none 		&kp LC(X)
				&none          	&none		&none     	&none	
			>;

			sensor-bindings = <&inc_dec_kp RBKT LBKT>;
		};

		rhino_layer {
			bindings = <
						&kp LC(Z)	&kp LC(U)	&kp LC(N0)	
				&none	 	&kp LC(Y)  	&kp LC(T)	&none	
				&none 		&kp LC(E)	&kp LC(M)	&kp LALT	
				&none 		&kp LC(J)	&kp LC(LA(E))	&kp LSHFT
				&none          	&lt SWITCH ESC	&kp LC(P)     	&mo RHIN
			>;

			sensor-bindings = <&inc_dec_kp RBKT LBKT>;
		};
		rhin_layer {
			bindings = <
						&none		&kp LC(N2)	&kp LC(D)
				&none	 	&none	 	&kp LC(N1)	&kp LC(V)
				&none 		&kp LC(LS(G)) 	&kp F2		&kp LC(C)
				&none 		&kp LC(G) 	&kp LC(O)	&kp LC(X)
				&none          	&kp ESC		&kp LC(LS(A))   &none	
			>;

			sensor-bindings = <&inc_dec_kp RBKT LBKT>;
		};
		switch_layer {
			bindings = <
						&none		&none	 	&none	 	
				&none	 	&to 3	 	&none	 	&none	 	
				&none 		&to 1	 	&none	 	&none	 	
				&none 		&to 0	 	&none	 	&none	 	
				&none          	&lt SWITCH ESC	&none	 	&none	
			>;

			sensor-bindings = <&inc_dec_kp RBKT LBKT>;
		};
	};
};
